<div>
    <div style=" width:500px ;height:500px ;border-color:aqua ;border-width:thin">

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" style="width:600px ; height:500px ;margin-bottom:50px ;background-color:white ;border-color:aqua ;border-width:thin ;margin-left:300px">
            <div class="form-group">
                <input type="text" required="required" asp-for="Input.FirstName">
                <label class="control-label" asp-for="Input.FirstName">FirstName</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" required="required" asp-for="Input.LastName">
                <label class="control-label" asp-for="Input.LastName">LastName</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" required="required" asp-for="Input.Password">
                <label class="control-label" asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="password" required="required" asp-for="Input.ConfirmPassword">
                <label class="control-label" asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="email" required="required" asp-for="Input.Email">
                <label class="control-label" asp-for="Input.Email">Email </label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.BirthDay"></label>
                <input asp-for="Input.BirthDay" class="form-control" />
                <span asp-validation-for="Input.BirthDay" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <select asp-for="Input.Gender" asp-items="Html.GetEnumSelectList<Enums.Gender>()" class="form-control"></select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            @*<div class="checkbox">
                <label>
                    <input type="checkbox" checked="checked"><i class="check-box"></i>Accept Terms & Conditions ?
                </label>
            </div>*@

            @if (User.IsInRole("Admin"))
            {
            <div class="form-group">
                <label asp-for="Input.role"></label>
                <select asp-for="Input.role" asp-items="Html.GetEnumSelectList<Enums.UserType>()" class="form-control"></select>
                <span asp-validation-for="Input.role" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group">
                    <label>Member </label>
                    <input asp-for="Input.role" type="radio" name="RDRoles" value="Member" checked />
                    <label>Admin </label>
                    <input asp-for="Input.role" type="radio" name="RDRoles" value="Admin" />
                </div>

            </div>
            }
