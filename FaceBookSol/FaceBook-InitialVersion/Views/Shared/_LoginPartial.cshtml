@using Microsoft.AspNetCore.Identity
@inject SignInManager<Person> SignInManager
@inject UserManager<Person> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
    //kerollos melad Home and profile
    <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-action="Home" asp-controller="Person" asp-route-UserName="@User.Identity.Name">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-action="Profile" asp-controller="Person" asp-route-UserName="@User.Identity.Name">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.Users.Where(u=>u.UserName==User.Identity.Name).Select(u=> $"{u.FirstName} {u.LastName}").FirstOrDefault()!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>