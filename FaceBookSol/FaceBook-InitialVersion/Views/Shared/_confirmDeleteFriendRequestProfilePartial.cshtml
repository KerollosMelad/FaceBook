
@model Person

<span>
    <a class="underline" asp-controller="Person" asp-action="ConfirmFriendRequest" asp-route-currentUserName="@User.Identity.Name" asp-route-FriendUserName="@Model.UserName"
       asp-route-DefaultValue="1"
          data-ajax="true" 
          data-ajax-update="#friendshipState" 
          data-ajax-mode="replace" 
          data-method="post"        >Confirm</a>
    <a class="underline" asp-controller="Person" asp-action="DeleteFriendRequest" asp-route-currentUserName="@User.Identity.Name" asp-route-FriendUserName="@Model.UserName"
          asp-route-DefaultValue="1"
          data-ajax="true" 
          data-ajax-update="#friendshipState" 
          data-ajax-mode="replace" 
          data-method="post"        >Delete</a>
</span>

